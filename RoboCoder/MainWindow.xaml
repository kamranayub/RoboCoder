<Window x:Class="RoboCoder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoboCoder"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Loaded="Window_Loaded"
        Unloaded="Window_Unloaded"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="143*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="ScriptTextBox" Grid.Row="1" Margin="5" Text="{Binding Instructions, Mode=TwoWay}" AcceptsReturn="True" TextChanged="ScriptTextBox_TextChanged"/>
    </Grid>
</Window>
